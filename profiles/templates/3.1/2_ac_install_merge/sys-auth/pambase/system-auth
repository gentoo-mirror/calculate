#pkg#

account    required     pam_unix.so
#?pkg(sys-auth/pam_client)>=0.1.1&&pkg(sys-apps/calculate-client)!=#
account    sufficient   pam_ldap.so
#pkg#

password   required     pam_cracklib.so difok=2 minlen=8 dcredit=2 ocredit=2 retry=3
