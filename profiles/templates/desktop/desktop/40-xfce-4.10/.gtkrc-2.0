style "xfdesktop-icon-view" {
    XfdesktopIconView::label-alpha = 0
    XfdesktopIconView::selected-label-alpha = 100
    XfdesktopIconView::ellipsize-icon-labels = 0

    XfdesktopIconView::shadow-x-offset = 1
    XfdesktopIconView::shadow-y-offset = 1
    XfdesktopIconView::shadow-color = "#000000"
    XfdesktopIconView::selected-shadow-x-offset = 0
    XfdesktopIconView::selected-shadow-y-offset = 0
    XfdesktopIconView::selected-shadow-color = "#000000"

    XfdesktopIconView::cell-spacing = 0
    XfdesktopIconView::cell-padding = 0
    XfdesktopIconView::cell-text-width-proportion = 2.3

    base[NORMAL] = "#91d7fd"
    base[SELECTED] = "#91d7fd"
    base[ACTIVE] = "#FFFFFF"

    fg[NORMAL] = "#FFFFFF"
    fg[SELECTED] = "#FFFFFF"
    fg[ACTIVE] = "#FFFFFF"

}
widget_class "*XfdesktopIconView*" style "xfdesktop-icon-view"

style "xfce-panel-window-style"
{
	# Time in miliseconds before the panel will unhide on an enter 
event
	XfcePanelWindow::popup-delay = 100

	# Time in miliseconds before the panel will hide on a leave 
event
	XfcePanelWindow::popdown-delay = 250
}
class "XfcePanelWindow" style "xfce-panel-window-style"
